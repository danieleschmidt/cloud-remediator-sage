{
  "name": "cloud-remediator-sage",
  "version": "0.1.0",
  "description": "A serverless framework to automate cloud security posture management (CSPM)",
  "main": "src/index.js",
  "scripts": {
    "test": "jest",
    "test:unit": "jest --testPathPattern=\"tests/.*\\.test\\.js\" --testPathIgnorePatterns=\"tests/integration/\" --testPathIgnorePatterns=\"tests/contract/\" --testPathIgnorePatterns=\"tests/performance/\"",
    "test:integration": "jest --testPathPattern=\"tests/integration/.*\\.test\\.js\"",
    "test:contract": "jest --testPathPattern=\"tests/contract/.*\\.test\\.js\"",
    "lint": "eslint src/ tests/ --config eslint.config.js",
    "lint:security": "eslint src/ tests/ --config .eslintrc.security.js",
    "build": "npm run lint && npm run test",
    "backlog": "node src/backlog/index.js",
    "demo": "node -e \"console.log('ðŸ¤– Autonomous Backlog Management Demo'); console.log('Run: npm run backlog');\"",
    "semantic-release": "semantic-release",
    "prepare": "husky install || true",
    "security:scan": "node scripts/security-scan.js",
    "security:scan:verbose": "node scripts/security-scan.js --verbose",
    "security:sbom": "node scripts/generate-sbom.js",
    "security:audit": "npm audit && npm run security:scan",
    "package:release": "node scripts/package-release.js",
    "release": "semantic-release",
    "release:dry-run": "semantic-release --dry-run",
    "deps:monitor": "node scripts/dependency-monitor.js",
    "quality:metrics": "node scripts/code-quality-metrics.js",
    "perf:benchmark": "node scripts/performance-benchmark.js",
    "security:audit:advanced": "node scripts/advanced-security-audit.js",
    "security:full": "npm run security:audit && npm run security:audit:advanced && npm run security:sbom",
    "maintenance:all": "npm run deps:monitor && npm run quality:metrics && npm run perf:benchmark && npm run security:audit:advanced",
    "metrics:collect": "node scripts/metrics-collector.js",
    "maintenance:run": "node scripts/repository-maintenance.js",
    "maintenance:dry-run": "node scripts/repository-maintenance.js --dry-run",
    "dev": "npm run test:unit -- --watch",
    "clean": "rm -rf node_modules coverage .serverless dist build",
    "setup": "npm install && npm run prepare && echo 'Setup complete. Copy .env.example to .env and configure.'"
  },
  "keywords": [
    "security",
    "cloud",
    "cspm",
    "aws",
    "serverless",
    "remediation"
  ],
  "author": "Terragon Labs",
  "license": "Apache-2.0",
  "devDependencies": {
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "@cyclonedx/bom": "^4.0.0",
    "@jest/globals": "^29.7.0",
    "@pact-foundation/pact": "^15.0.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.0",
    "@semantic-release/npm": "^11.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "semantic-release": "^22.0.0"
  },
  "dependencies": {
    "aws-sdk": "^2.1691.0",
    "gremlin": "^3.7.2",
    "joi": "^18.0.0",
    "js-yaml": "^4.1.0"
  }
}
